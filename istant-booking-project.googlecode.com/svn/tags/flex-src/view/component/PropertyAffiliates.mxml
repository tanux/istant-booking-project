			<mx:Text id="txtModify" text="Modifica" color="white" fontSize="10" fontWeight="bold"/>
			<mx:Image id="imgPencil" source="@Embed(source='assets/images/pencil.png')"/>	
		</mx:HBox>
	</mx:Canvas>
	
		<mx:VBox id="hbLocationName" width="100%" height="100%" paddingBottom="5" 
				 paddingLeft="5" paddingRight="5" horizontalAlign="center">
			<mx:Form id="frmRegister" width="100%" height="100%">
				<mx:FormItem id="fiAffiliateName" width="100%" horizontalAlign="center" paddingRight="15">
					<mx:Text id="txtAffiliateName" color="#000000" fontStyle="italic" text="Nome AttivitÃ "/>
