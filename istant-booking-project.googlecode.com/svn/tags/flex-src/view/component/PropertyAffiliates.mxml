		  paddingLeft="10" paddingRight="10" paddingTop="7" paddingBottom="20"
		  horizontalAlign="center" width="50%" height="50%"
		  styleName="panelSkinsICandy" >
	
	<mx:Canvas id="cnvAddRemoveLocation" width="100%" >
