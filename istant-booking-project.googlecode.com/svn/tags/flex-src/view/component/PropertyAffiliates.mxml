					<mx:Text id="txtPwd" color="#000000" fontStyle="italic" text="Password" />
					<mx:TextInput id="tiPwd" color="#000000" text="Password" displayAsPassword="true"/>
				</mx:FormItem>
			</mx:Form>
			
			<mx:HBox width="100%" horizontalAlign="center">
				<mx:Button icon="@Embed(source='assets/images/save.png')" downIcon="@Embed(source='assets/images/save_little.png')"
						   width="45" height="40"/>
				<mx:Button icon="@Embed(source='assets/images/x.png')" downIcon="@Embed(source='assets/images/x_little.png')"
