<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 verticalAlign="middle" horizontalAlign="center">
	<fx:Script>
		<![CDATA[
			[Bindable]public var visibleBtnReset: Boolean = false;
		]]>
	</fx:Script>
	
	<mx:Button id="btnAdd" icon="@Embed(source='assets/images/house_plus.png')" downIcon="@Embed(source='assets/images/house_plus_little.png')"
			   width="45" height="40" enabled="false"/>
	<mx:Button id="btnDelete" icon="@Embed(source='assets/images/house_delete.png')" downIcon="@Embed(source='assets/images/house_delete_little.png')"
			   width="45" height="40" enabled="false"/>
	<mx:Button id="btnSave" icon="@Embed(source='assets/images/save.png')" downIcon="@Embed(source='assets/images/save_little.png')"
			   width="45" height="40" enabled="false"/>
	<mx:Button id="btnReset" icon="@Embed(source='assets/images/cross_cancel.png')" downIcon="@Embed(source='assets/images/cross_cancel_little.png')"
			   width="45" height="40" enabled="true" visible="{visibleBtnReset}"/>
</mx:HBox>
