	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			[Bindable]public var hours:Array = [{hour:"15.00",busy:false},
												{hour:"16.00",busy:false},
												{hour:"17.00",busy:false},
												{hour:"18.00",busy:false},
												{hour:"19.00",busy:false},
												{hour:"20.00",busy:false}]; 
			
		]]>
	</fx:Script>
