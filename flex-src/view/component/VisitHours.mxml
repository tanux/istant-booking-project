	<mx:VBox id="vbHours" width="100%" verticalAlign="middle" height="30%"
			 paddingTop="5" paddingRight="20" paddingLeft="20">				
		<mx:Repeater id="rptContentHours" dataProvider="{hours}"> 
							
				<mx:RadioButton id="rbHour"									 
							 label="{rptContentHours.currentItem.hour}" 
							 visible="{!(rptContentHours.currentItem.busy)}"
							 />
		</mx:Repeater>
	</mx:VBox>	
	
