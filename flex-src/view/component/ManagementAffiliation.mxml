		</mx:VBox>
		
		<mx:VBox width="50%">
			<mx:HBox width="100%" height="15%">
				<mx:Label text="Numero pazienti NomeAffiliates: " />	
			</mx:HBox>
			<mx:DataGrid id="dgAffilation2" width="100%" height="80%">
				<mx:columns>
					<mx:DataGridColumn id="clmLocatio2n" dataField="Ottico" headerText="Sede" />
					<mx:DataGridColumn id="clmStre2et" dataField="Indirizzo" headerText="Indirizzo" />
					<mx:DataGridColumn id="clmTelep2hone" dataField="Telefono" headerText="Telefono" />
				</mx:columns>
			</mx:DataGrid>
		</mx:VBox>
	</mx:HBox>
	

	<mx:HBox horizontalAlign="center" width="80%">
		
		<mx:Box width="50%" horizontalAlign="right">
			<component:HouseButton id="cmpHouseButton" />
		</mx:Box>
		<mx:Box width="50%" horizontalAlign="right">
			<mx:Button icon="@Embed(source='assets/images/print.png')" downIcon="@Embed(source='assets/images/print_little.png')"
					   width="45" height="40"/>		
		</mx:Box>
	</mx:HBox>
</mx:VBox>

