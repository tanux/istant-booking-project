<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:ui="http://www.kapit.fr/flex3/ui"
			   minWidth="955" minHeight="450"
			   >
	
	<fx:Script>
		<![CDATA[	
			import mx.controls.Alert;
			private var facade:ApplicationFacade = ApplicationFacade.getInstance() as ApplicationFacade;
			var arrayDate:Array = new Array(new Date(2012,06,11),new Date(2012,06,18));			
			protected function dateField_Handler():Date{
				
				for (var i:int=0; i<arrayDate.length; i++){
					calendar.disabledRanges.push(arrayDate[i]);		
				}
				var today:Date = new Date();
				var millisecondsPerDay:Number = 1000 * 60 * 60 * 24;				
				var yesterday:Date = new Date();
				yesterday.setTime(today.getTime() - millisecondsPerDay);				
				return new Date(yesterday.getFullYear(),yesterday.getMonth(), yesterday.getDate());				
			}
			protected function makeArray():void{
				for (var i:int=0; i<arrayDate.length; i++){
					calendar.disabledRanges.push(arrayDate[i]);		
				}	
				calendar.disabledRanges.push({rangeEnd: dateField_Handler()});
				
			}
		]]>
	</fx:Script>
	<mx:Panel   
			  paddingLeft="10" paddingRight="10" paddingTop="20"
			  title="Giorno" horizontalAlign="center" verticalAlign="middle"
			  >
	<mx:DateChooser id="calendar" width="100%" height="100%" disabledDays="[0, 2, 6]"
					dayNames= " [Dom, Lun, Mar, Mer, Gio, Ven, Sab] "
					monthNames="[ Gennaio, Febbraio, Marzo, Aprile, Maggio, Giugno, Luglio, Agosto, Settembre, Ottobre, Novembre, Dicembre]"
					firstDayOfWeek="1"
					minYear="2012" maxYear="2013"
					showToday="true" 						
					disabledRanges="{[ arrayDate[1],{rangeEnd: dateField_Handler()} ]}"
					/>
		</mx:Panel>
	 
</mx:Application>