<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx"
				title="Conferma la tua prenotazione"
				layout="vertical" 
				width="380" 
				height="300"
				titleStyleName="titleText"
				backgroundColor="white"
				backgroundAlpha="1.0"
				borderColor="white"
				borderAlpha="1.0"
				cornerRadius="0"
				showCloseButton="true"
				creationComplete="showedConfirmWindow()">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		.titleText {
			fontSize: 12px;                 
		}
		.headingText {
			fontSize: 12px;
			fontWeight: bold;
		}
	</fx:Style>
	<fx:Script>
		<![CDATA[                       
			import model.vo.Booking;
			
			import mx.controls.Alert;
			var facade:ApplicationFacade = ApplicationFacade.getInstance() as ApplicationFacade;
			public static const SHOWED_CONFIRM_BOOKING_WINDOW:String = "ShowedConfirmBookingWindow";
			[Bindable] public var booking:Booking;
			private function showedConfirmWindow():void{
				dispatchEvent(new Event (SHOWED_CONFIRM_BOOKING_WINDOW) );
			}
		]]>
	</fx:Script>
	<mx:Text text="Dati della prenotazione"
			 width="100%" height="20"
			 styleName="titleText" />
	<mx:Text id="txtCustomerInfo" text="{booking.idCustomer.lastName} {booking.idCustomer.firstName}"
			 width="100%" styleName="headingText"/> 
	<mx:Text id="txtLocationInfo" text="Location scelta: {booking.idLocation.city}"
			 width="100%" styleName="headingText"/>	
	<mx:Text id="txtDateInfo" text="Data: {booking.visitDay}"
			 width="100%" styleName="headingText"/>
	<mx:Text id="txtHourInfo" text="Orario: {booking.visitHour}"
			 width="100%" styleName="headingText"/>
	
	<mx:HBox width="100%" horizontalAlign="center">
		<mx:Button label="Conferma" id="btnConfirmBooking"/>
	</mx:HBox>      
</mx:TitleWindow>
