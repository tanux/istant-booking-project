<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 width="100%" height="100%">
	<mx:HBox width="100%" textAlign="left" horizontalAlign="right" verticalAlign="middle">
		<mx:Canvas>
			<mx:Box>
				<mx:TextInput text="Cerca..." paddingTop="1" textAlign="right"/>	
			</mx:Box>
			<mx:Box width="20%" height="90%" paddingTop="2" paddingLeft="2">
				<mx:Image source="assets/images/find.png" height="20" />	
			</mx:Box>			
		</mx:Canvas>
	</mx:HBox>
	
	<mx:DataGrid id="dgRisultati" width="100%" height="50%">

		<mx:columns>
			<mx:DataGridColumn id="clmNome" dataField="Nome" headerText="Nome" />
			<mx:DataGridColumn id="clmCognome" dataField="Cognome" headerText="Cognome" />
			<mx:DataGridColumn id="clmCF" dataField="CF" headerText="Codice Fiscale" />
			<mx:DataGridColumn id="clmEMail" dataField="Mail" headerText="E-Mail" />
			<mx:DataGridColumn id="clmTel" dataField="Tel" headerText="Telefono" />
		</mx:columns>
	</mx:DataGrid>
	<mx:HBox>
		<mx:TextInput text="Nome" paddingTop="1" paddingLeft="2"/>
		<mx:TextInput text="Cognome" paddingTop="1" paddingLeft="2"/>
		<mx:TextInput text="Codice Fiscale" paddingTop="1" paddingLeft="2"/>
	</mx:HBox>
	<mx:HBox width="100%" horizontalAlign="right">
		<mx:Button icon="@Embed(source='assets/images/add_user.png')" downIcon="@Embed(source='assets/images/add_user_little.png')"
				   width="45" height="40"/>
		<mx:Button icon="@Embed(source='assets/images/delete_user.png')" downIcon="@Embed(source='assets/images/delete_user_little.png')"
				   width="45" height="40"/>
		<mx:Button icon="@Embed(source='assets/images/save.png')" downIcon="@Embed(source='assets/images/save_little.png')"
				   width="45" height="40"/>
		<mx:Button icon="@Embed(source='assets/images/prenota.png')" downIcon="@Embed(source='assets/images/prenota_little.png')"
				   width="45" height="40"/>
	</mx:HBox>

</mx:VBox>