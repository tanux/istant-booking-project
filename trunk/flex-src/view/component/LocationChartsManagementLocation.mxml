<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" title="Grafico" width="100%" height="50%" styleName="panelSkinsICandy"
		  paddingTop="30" paddingLeft="10" paddingRight="20" paddingBottom="10">
	
	<mx:Script><![CDATA[
		import mx.collections.ArrayCollection;
		[Bindable]
		private var expenses:Array = [
			{Month:"January",Profit:2000,Expenses:1500,Amount:450},
			{Month:"February",Profit:1000,Expenses:200,Amount:600},
			{Month:"March",Profit:1500,Expenses:500,Amount:300},
			{Month:"April",Profit:500,Expenses:300,Amount:500},
			{Month:"May",Profit:1000,Expenses:450,Amount:250},
			{Month:"June",Profit:2000,Expenses:500,Amount:700}
		];
		
	]]></mx:Script>
	
	
	<mx:ColumnChart id="myChart" width="100%" height="100%" color="#000000" fontWeight="bold"
					showDataTips="true" dataProvider="{expenses}" >
		<mx:horizontalAxis>
			<mx:CategoryAxis 
				dataProvider="{expenses}" 
				categoryField="Month"
				/>
		</mx:horizontalAxis>
		<mx:series>
			<mx:ColumnSeries 
				xField="Month" 
				yField="Profit"
				displayName="Profit"
				/>
			<mx:ColumnSeries 
				xField="Month" 
				yField="Expenses"
				displayName="Expenses"
				/>
		</mx:series>
	</mx:ColumnChart>

	
</mx:Panel>

